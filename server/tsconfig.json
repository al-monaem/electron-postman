{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "paths": {
      "@controllers/*": ["controllers/*"]
    },
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
